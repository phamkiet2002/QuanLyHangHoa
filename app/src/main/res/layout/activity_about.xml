<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@color/black"
        android:elevation="4dp"
        app:title="App"
        app:popupTheme="@color/black"
        app:layout_constraintTop_toTopOf="parent">
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="0pt"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="15pt"
        android:gravity="center"
        android:id="@+id/about"
        android:background="#fff000"
        app:layout_constraintTop_toBottomOf="@id/my_toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="0pt"
        android:layout_height="wrap_content"
        android:text="Tên: Phạm Tuấn Kiệt"
        android:id="@+id/ten"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/about"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="0pt"
        android:id="@+id/lop"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Lớp: D20_TH06"
        app:layout_constraintTop_toBottomOf="@id/ten"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="0pt"
        android:id="@+id/mssv"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Mssv: DH52004277"
        app:layout_constraintTop_toBottomOf="@id/lop"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="0pt"
        android:id="@+id/email"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Email: DH52004277@student.stu.edu.vn"
        app:layout_constraintTop_toBottomOf="@id/mssv"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="0pt"
        android:id="@+id/sdt"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="SDT: 0968621174"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnCall"
        app:layout_constraintBottom_toBottomOf="@id/btnCall"
        app:layout_constraintRight_toLeftOf="@id/btnCall"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:id="@+id/btnCall"
        app:layout_constraintLeft_toRightOf="@id/sdt"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>