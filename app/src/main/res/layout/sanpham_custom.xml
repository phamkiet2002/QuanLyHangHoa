<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageviewHinh"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textviewTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imageviewHinh"
        android:text="Tên"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textviewLoai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewTen"
        android:layout_marginStart="10dp"
        android:layout_marginTop="44dp"
        android:layout_toEndOf="@+id/imageviewHinh"
        android:text="Nhà cung cấp: "
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textviewMa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewTen"

        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/imageviewHinh"
        android:text="Ma: "
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnXoa"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imageviewHinh"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="300dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#ff0000"
        android:text="Delete"
        android:textColor="#ffffff" />

</RelativeLayout>